    "menus": {
      "explorer/context": [
        {
          "command": "glueful.routesPanel",
          "when": "explorerResourceIsFolder",
          "group": "glueful"
        }
      ],
      "view/title": [
        {
          "command": "glueful.refreshRoutes",
          "when": "view == glueful.routes",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "glueful.routesPanel",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "glueful.dashboard",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "snippets": [
      {
        "language": "php",
        "path": "./snippets/php.json"
      }
    ],
    "configuration": {
      "title": "Glueful",
      "properties": {
        "glueful.cliPath": {
          "type": "string",
          "default": "php vendor/bin/glueful",
          "description": "Command to run the Glueful CLI (e.g., `php vendor/bin/glueful` or `vendor/bin/glueful`)."
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "glueful",
        "required": [
          "command"
        ],
        "properties": {
          "command": {
            "type": "string",
            "description": "Glueful CLI subcommand (e.g., `cache:build`, `routes:list`, `test`)."
          }
        }
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "vsce package || echo 'Install vsce to package: npm i -g @vscode/vsce'",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "icons:generate": "node scripts/generate-icons.mjs",
    "security:enforce": "npx ts-node scripts/ci-security-enforcement.ts",
    "security:scan": "npx ts-node scripts/security-lint.ts",
    "security:full": "npm run security:enforce && npm run security:scan",
    "precommit": "npm run security:enforce && npm run lint && npm run compile"
  },
  "dependencies": {
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/vscode": "^1.93.0",
    "typescript": "^5.5.4",
    "eslint": "^9.9.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "prettier": "^3.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "vitest": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "esbuild": "^0.25.0",
    "sharp": "^0.33.4"
  }
}